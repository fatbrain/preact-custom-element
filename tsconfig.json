{
  "compilerOptions": {
    "lib": [
      "DOM",
      "ES2020"
    ],
    "target": "ES2021",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./",
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "files": [
    "src/index.ts"
  ]
}